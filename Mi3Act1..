#include<stdio.h>

int main(){
    int temp;
    printf("Please input the temperature");
    scanf("%d", &temp);
    if(temp<0){
        printf("Oh! the weather is freezing!");
    }
    else if(temp >= 0 && temp <= 10){
        printf("Oh my! the weather is very cold!");
    }
    else if(temp >= 10 && temp <= 20){
        printf("It's a cold weather!");
    }
    else if(temp >= 20 && temp <= 30){
        printf("The weather is normal!");
    }
    else if(temp >= 30 && temp <= 40){
        printf("It's a hot weather!");
    }
    else if(temp>=40){
        printf("The weather is very hot!");
    }
    return 0;
}
    